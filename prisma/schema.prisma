generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  SuperAdmin
  Admin
  User
}

enum UserStatus {
  Pending
  Active
  Banned
}

enum ActionType {
  Login
  Logout
  Download
  PageView
}

model User {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  firstName       String
  lastName        String
  email           String            @unique
  role            Role              @default(User)
  status          UserStatus        @default(Pending)
  updateBy        String?           @db.ObjectId
  isDeleted       Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  userHasPassword UserHasPassword[]
  activityLogs     ActivityLogs[]
}

model UserHasPassword {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLogs {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  user       User       @relation(fields: [userId], references: [id])
  userId     String     @db.ObjectId
  sessionId  String?
  actionType ActionType // Type of action: login, logout, download, pageView
  target     String? // Specific target of the action (e.g., downloaded file or page URL)
  activityAt DateTime   @default(now())
  metadata   Json? // Optional additional information (e.g., device info, referrer, count etc.)
  ipAddress  String? // IP address of the user
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}
